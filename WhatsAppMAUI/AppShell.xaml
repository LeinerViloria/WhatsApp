<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WhatsAppMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:WhatsAppMAUI.Pages"
    xmlns:local="clr-namespace:WhatsAppMAUI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Chats">
            <ShellContent ContentTemplate="{DataTemplate pages:ChatsPage}" />
        </Tab>
        <Tab Title="Estados">
            <ShellContent ContentTemplate="{DataTemplate pages:StatusPage}" />
        </Tab>
        <Tab Title="Llamadas">
            <ShellContent ContentTemplate="{DataTemplate pages:CallsPage}" />
        </Tab>
    </TabBar>

</Shell>
